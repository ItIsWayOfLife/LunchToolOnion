@model Web.Models.Account.ChangePasswordViewModel
@{
    ViewBag.Title = @SharedLocalizer["ViewAccountChangePassword_Title"];
}

@if (User.Identity.IsAuthenticated)
{
    <h1 class="text-center"> @SharedLocalizer["ViewAccountChangePassword_Header"] @Model.Email</h1>
    <br />
    <form asp-action="ChangePassword" autocomplete="off" asp-controller="Account">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Email" />
        <div class="form-group">
            <label asp-for="OldPassword" class="control-label">@SharedLocalizer["OldPassword"]</label>
            <input type="text" asp-for="OldPassword" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NewPassword" class="control-label">@SharedLocalizer["NewPassword"]</label>
            <input type="text" asp-for="NewPassword" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="@SharedLocalizer["Save"]" class="btn btn-sm btn-success" />
        </div>
    </form>
}
