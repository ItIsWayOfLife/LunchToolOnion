@model Web.Models.Catalog.EditCatalogViewModel

@{
    ViewData["Title"] = @SharedLocalizer["ViewCatalogEdit_TitleAndHeader"];
}

    <h1 class="text-center">@SharedLocalizer["ViewCatalogEdit_TitleAndHeader"] @Model.Name</h1>
<br/>

<form method="post" asp-controller="Catalog" asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ProviderId" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">@SharedLocalizer["Name"]</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Info" class="control-label">@SharedLocalizer["Info"]</label>
        <input type="text" asp-for="Info" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="@SharedLocalizer["Edit"]" class="btn btn-outline-secondary" />
    </div>
</form>

