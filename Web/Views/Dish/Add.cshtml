@model Web.Models.Dish.AddDishViewModel
@{
    ViewData["Title"] = @SharedLocalizer["AddingDish"];
}

    <h1 class="text-center">@SharedLocalizer["AddingDish"]</h1>
<br />

<h3>@SharedLocalizer["AddImgInfo"]</h3>
<form method="post" asp-controller=Dish asp-action="Add" enctype="multipart/form-data">
    <input type="file" name="uploadedFile" /><br>
    <input type="hidden" asp-for="CatalogId" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">@SharedLocalizer["Name"]</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Info" class="control-label">@SharedLocalizer["Info"]</label>
        <input type="text" asp-for="Info" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Weight" class="control-label">@SharedLocalizer["Weight"]</label>
        <input type="text" asp-for="Weight" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">@SharedLocalizer["Price"]</label>
        <input type="text" asp-for="Price" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="@SharedLocalizer["Add"]" class="btn btn-outline-secondary" />
    </div>
</form>

