@model Web.Models.Dish.EditDithViewModel

@{
    ViewData["Title"] = "Изменение блюда";
}

<h1 class="text-center">Изменение блюда "@Model.Name"</h1>
<br />
@if (Model.Path != null)
{
    <img width="360" height="180" class="img-thumbnail" src="@Model.Path" alt="@Model.Name" />
}
<h3>Выберите файл для загрузки (если файл не выбран картинка будет старая) </h3>
<form method="post" asp-controller=Dish asp-action="Edit" enctype="multipart/form-data">
    <input type="file" name="uploadedFile" /><br>
    <input type="hidden" asp-for="CatalogId" />
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Path" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Info" class="control-label">Информация</label>
        <input type="text" asp-for="Info" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Weight" class="control-label">Вес</label>
        <input type="text" asp-for="Weight" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Цена</label>
        <input type="text" asp-for="Price" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Изменить" class="btn btn-outline-secondary" />
    </div>
</form>
