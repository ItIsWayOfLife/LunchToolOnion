@model Web.Models.Dish.DishViewModel

<div class="col-lg-4">
    @if (Model.Path != null)
    {
   <img width="360" height="180" class="img-thumbnail" src="@Model.Path" alt="@Model.Name" />
    }
    <h2>Название: @Model.Name</h2>
    <p> Информация: @Model.Info </p>
    <p>Вес: @Model.Weight</p>
    <p>Цена: @Model.Price BYN</p>
    @if (User.IsInRole("admin"))
    {
<form asp-action="Delete" asp-route-id="@Model.Id" asp-route-menuId="@Model.CatalogId" method="post">
    <input type="hidden" name="searchSelectionString" value="@ViewData["SearchSelectionString"]" />
    <input type="hidden" name="name" value="@ViewData["SeacrhString"]" />
    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Изменить</a>
    <button type="submit" class="btn btn-sm btn-danger">
        Удалить
    </button>
</form>
        <br />
    }

    <a class="btn btn-sm btn-primary" asp-action="Add" asp-controller="Cart"  asp-route-dishId="@Model.Id">В корзину</a>
    <br />
</div>