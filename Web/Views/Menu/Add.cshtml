@model Web.Models.Menu.AddMenuViewModel
@{
    ViewBag.Title = "Добавление меню";
}
<h1 class="text-center">Добавление меню</h1>
<br/>
<form method="post" asp-controller=Menu asp-action="Add">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="ProviderId" />
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Info" class="control-label">Информация</label>
        <input type="text" asp-for="Info" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label">Дата</label>
        <input type="date" asp-for="Date" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-outline-secondary" />
    </div>
</form>
