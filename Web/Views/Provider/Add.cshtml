@model Web.Models.Provider.AddProviderViewModel
@{
    ViewBag.Title = @SharedLocalizer["AddProvider"];
}

    <h1 class="text-center">@SharedLocalizer["AddProvider"]</h1>
<br />
<h3>@SharedLocalizer["AddImgInfo"]</h3>
<form method="post" asp-controller=Provider asp-action="Add" enctype="multipart/form-data">
    <input type="file" name="uploadedFile" /><br>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">@SharedLocalizer["Email"]</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">@SharedLocalizer["Name"]</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="control-label">@SharedLocalizer["IsActive"]</label>
        <input type="checkbox" asp-for="IsActive" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TimeWorkWith" class="control-label">@SharedLocalizer["TimeWorkWith"]</label>
        <input type="time" asp-for="TimeWorkWith" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TimeWorkTo" class="control-label">@SharedLocalizer["TimeWorkTo"]</label>
        <input type="time" asp-for="TimeWorkTo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="WorkingDays" class="control-label">@SharedLocalizer["WorkingDays"]</label>
        <input type="text" asp-for="WorkingDays" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IsFavorite" class="control-label">@SharedLocalizer["InMain"]</label>
        <input type="checkbox" asp-for="IsFavorite" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Info" class="control-label">@SharedLocalizer["Info"]</label>
        <input type="text" asp-for="Info" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="@SharedLocalizer["Add"]" class="btn btn-outline-secondary" />
    </div>
</form>
