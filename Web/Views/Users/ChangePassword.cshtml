@model Web.Models.Users.ChangePasswordViewModel
@{
    ViewBag.Title =  @SharedLocalizer["ChangePasswordForUser"];
}

    <h1 class="text-center">@SharedLocalizer["ChangePasswordForUser"] @Model.Email</h1>
<br />

<form asp-action="ChangePassword" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />
    <div class="form-group">
        <label asp-for="OldPassword" class="control-label">@SharedLocalizer["OldPassword"]</label>
        <input type="text" asp-for="OldPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">@SharedLocalizer["NewPassword"]</label>
        <input type="text" asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="@SharedLocalizer["Save"]" class="btn btn-default" />
    </div>
</form>
