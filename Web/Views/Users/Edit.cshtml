@model Web.Models.Users.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
    <h1 class="text-center">Редактирование пользователя</h1>
<br />

<form method="post" autocomplete="off" asp-action="Edit" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Firstname" class="control-label">Имя</label>
        <input type="text" asp-for="Firstname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Lastname" class="control-label">Фамилия</label>
        <input type="text" asp-for="Lastname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Patronomic" class="control-label">Отчество</label>
        <input type="text" asp-for="Patronomic" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
    </div>
</form>