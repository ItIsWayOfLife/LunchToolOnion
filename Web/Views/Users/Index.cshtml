@model Web.Models.Users.UserFilterListViewModel
@{
    ViewBag.Title = "Список пользователей";
}

    <h1 class="text-center">Пользователи</h1>
<br />


<a asp-action="Create" class="btn btn-sm btn-success">Добавить пользователя</a>
<br />
<br />
<form method="get">
    <div class="form-inline form-group">
        <label class="control-label" style="margin-left: 5px;">Поиск по: </label>
        <select name="searchSelectionString" asp-items="Model.SearchSelection" asp-for="SearchSelectionString" class="form-control" style="margin-left: 5px;"></select>

        <label class="control-label" style="margin-left: 5px;">Значение: </label>
        <input name="name" class="form-control" asp-for="SeacrhString" style="margin-left: 5px;"/>
        <input type="submit" value="Поиск" class="btn btn-sm btn-success" style="margin-left: 5px;"/>
        <a asp-action="Index" class="btn btn-sm btn-success" style="margin-left: 5px;">Обновить</a>
    </div>
</form>

<table class="table">
    <tr><th>Id</th><th>Email</th><th>ФИО</th><th></th></tr>

    @{
        foreach (var user in Model.ListUsers.Users)
        {
            @await Html.PartialAsync("_UserList", user)
        }
    }
</table>