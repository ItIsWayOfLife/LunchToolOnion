@model Web.Models.Users.UserViewModel

    <tr>
        <td>@Model.Id</td>
        <td>@Model.Email</td>
        <td>@Model.FLP</td>
        <td>
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@Model.Id">@SharedLocalizer["Edit"]</a>
                <a class="btn btn-sm btn-success" asp-controller="Users" asp-action="ChangePassword" asp-route-id="@Model.Id">@SharedLocalizer["ChangePassword"]</a>
                <a class="btn btn-sm btn-secondary" asp-controller="Roles" asp-action="Edit" asp-route-userid="@Model.Id">@SharedLocalizer["AccessRights"]</a>
                <button type="submit" class="btn btn-sm btn-danger">
                    @SharedLocalizer["Delete"]
                </button>
            </form>
        </td>
    </tr>